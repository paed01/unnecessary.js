{
  "env": {
    "mocha": true
  },
  "rules": {
    "no-unused-expressions": 0,
    "consistent-return": 0,
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Feature",
          "Scenario",
          "Given",
          "When",
          "Then",
          "And",
          "But",
          "I",
          "System",
          "Describe"
        ]
      }
    ]
  }
}
